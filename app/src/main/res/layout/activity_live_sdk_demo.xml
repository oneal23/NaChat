<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context="com.livesdk.example.LiveSdkDemoActivity">


    <LinearLayout
        android:layout_marginTop="150dp"
        android:id="@+id/llLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llVideoLayout1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            tools:layout_height="180dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/flVideo0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/flVideo1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/flVideo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llVideoLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llVideoLayout1"
            tools:layout_height="180dp"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/flVideo3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/flVideo4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/flVideo5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="44dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivHeader"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="6dp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ivHeader"
            android:minWidth="50dp"
            android:paddingRight="12dp"
            android:textColor="@color/font_color_0"
            android:textSize="@dimen/font_size_4"
            android:textStyle="bold"
            tools:text="name" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlHeader"
        android:layout_marginTop="12dp"
        android:background="@color/bg_color_1_80"
        android:minHeight="35dp">

        <TextView
            android:id="@+id/tvTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="3dp"
            android:text="Please keep showing your face"
            android:textColor="@color/font_color_1"
            android:textSize="@dimen/font_size_4" />
    </RelativeLayout>

</RelativeLayout>
